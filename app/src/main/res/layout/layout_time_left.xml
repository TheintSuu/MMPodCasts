<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/margin_small"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/pbPodCast"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="80"
        android:max="100"
        android:layout_toStartOf="@id/tvPodCastTimeLeft"
        android:progressBackgroundTint="@color/textColorTertray"
        android:progressTint="@color/progressBarColor"

        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPodCastTimeLeft"
        android:layout_alignParentEnd="true"
        android:text="1h left"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/textColorTertray"
        android:textSize="@dimen/text_small"
        android:paddingLeft="@dimen/margin_medium"


        />
</RelativeLayout>
