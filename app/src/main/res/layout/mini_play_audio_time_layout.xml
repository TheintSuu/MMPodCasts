<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/btnForwardSpeed"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="17dp"
        android:text="1x"
        android:textAlignment="viewStart"
        android:textColor="#fff"
        android:textSize="@dimen/text_regular_3x"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnReplayTime"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_replay_24" />

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_pause_circle_outline_24" />

    <ImageView
        android:id="@+id/btnReplayTime2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="242dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_refresh_24" />

    <TextView
        android:id="@+id/imageView9"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="18dp"
        android:text="Zz"
        android:textColor="#fff"
        android:textSize="@dimen/text_regular_3x"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forwardTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:text="15"
        android:textColor="#fff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnReplayTime"
        app:layout_constraintTop_toTopOf="@+id/btnReplayTime"
        app:layout_constraintVertical_bias="0.384" />

    <TextView
        android:id="@+id/tv30Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="30"
        android:textColor="#fff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnReplayTime2"
        app:layout_constraintTop_toTopOf="@+id/btnReplayTime2"
        app:layout_constraintVertical_bias="0.461" />
</androidx.constraintlayout.widget.ConstraintLayout>
