<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/pbPodCast"
        android:layout_marginStart="-4dp"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@id/tvPodCastTimeLeft"
        android:max="100"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:progress="80"
        android:progressBackgroundTint="@color/textColorTertray"
        android:progressTint="@color/progressBarColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPodCastTimeLeft"
        android:layout_alignParentEnd="true"
        android:text="1h left"
        android:layout_centerVertical="true"
        android:textColor="@color/textColorTertray"
        android:textSize="@dimen/text_label_small"
        android:paddingHorizontal="@dimen/margin_small"


        />
</RelativeLayout>
